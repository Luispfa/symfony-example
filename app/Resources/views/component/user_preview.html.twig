<div class="media">
    <div class="media-left">
        <a href="{{ path('profile_show', {username: user.username}) }}">
            <img style="width: 80px"
                 class="media-object"
                 src="{{ user.image }}" alt="Imagen del usuario">
        </a>
    </div>
    <div class="media-body">
        <a href="{{ path('profile_show', {username: user.username}) }}">
            <h4 class="media-heading">{{ user.name ~ ' ' ~ user.surname }}</h4>
        </a>
        <p>
            @{{ user.username }}
        </p>
    </div>
</div>